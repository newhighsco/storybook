{
  "name": "@newhighsco/storybook",
  "description": "New High Score Storybook addons and presets",
  "author": "New High Score <hello@newhighsco.re>",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/storybook.git"
  },
  "homepage": "https://github.com/newhighsco/storybook#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/storybook/issues"
  },
  "scripts": {
    "prestart": "yarn build",
    "start": "storybook dev --port 6006 --docs",
    "prepare": "is-ci || husky install",
    "build": "yarn workspaces run build",
    "prebuild:storybook": "yarn build",
    "build:storybook": "storybook build --output-dir build --docs --quiet --webpack-stats-json",
    "pretest": "yarn lint",
    "test": "npm-run-all --parallel test:*",
    "test:js": "jest --coverage",
    "snapshot": "chromatic --storybook-build-dir build --auto-accept-changes main --exit-once-uploaded --only-changed",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint --cache --ignore-path .gitignore '**/*.?(s)css'",
    "lint:js": "eslint --cache --ignore-path .gitignore .",
    "format": "npm-run-all --parallel format:*",
    "format:css": "yarn lint:css --fix",
    "format:js": "yarn lint:js --fix"
  },
  "devDependencies": {
    "@babel/cli": "7.22.15",
    "@babel/core": "7.22.20",
    "@babel/preset-env": "7.22.20",
    "@babel/preset-react": "7.22.15",
    "@commitlint/cli": "17.7.1",
    "@newhighsco/chipset": "6.15.1",
    "@newhighsco/commitlint-config": "1.1.19",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "4.0.70",
    "@newhighsco/prettier-config": "2.1.15",
    "@newhighsco/release-config": "1.3.34",
    "@newhighsco/stylelint-config": "3.1.59",
    "@qiwi/multi-semantic-release": "7.0.0",
    "@storybook/react-webpack5": "7.4.2",
    "chromatic": "7.2.0",
    "eslint": "8.49.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "semantic-release": "22.0.0",
    "storybook": "7.4.2",
    "stylelint": "15.10.3",
    "webpack": "5.88.2"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config"
    ]
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config",
    "branches": [
      "main"
    ]
  },
  "renovate": {
    "extends": [
      "local>newhighsco/.github:renovate-config"
    ],
    "packageRules": [
      {
        "extends": [
          "monorepo:storybook"
        ],
        "semanticCommitType": "fix"
      },
      {
        "description": "Pin wrap-ansi to v7 as v8 requires ESM",
        "matchPackageNames": [
          "wrap-ansi"
        ],
        "allowedVersions": "<=7.0.0"
      }
    ]
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
