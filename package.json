{
  "name": "@newhighsco/storybook",
  "description": "New High Score Storybook addons and presets",
  "author": "New High Score",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/storybook.git"
  },
  "homepage": "https://github.com/newhighsco/storybook#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/storybook/issues"
  },
  "scripts": {
    "prestart": "yarn build",
    "start": "storybook dev --port 6006 --docs",
    "prepare": "husky",
    "build": "yarn workspaces run build",
    "prebuild:storybook": "yarn build",
    "build:storybook": "storybook build --output-dir build --docs --quiet --webpack-stats-json",
    "pretest": "yarn lint",
    "test": "jest --runInBand",
    "test:list": "jest --listTests",
    "snapshot": "chromatic --storybook-build-dir build --auto-accept-changes main --exit-once-uploaded --only-changed",
    "lint": "concurrently yarn:lint:*",
    "lint:css": "stylelint --cache --ignore-path .gitignore '**/*.?(s)css'",
    "lint:js": "eslint --cache --ignore-path .gitignore .",
    "format": "concurrently yarn:format:*",
    "format:css": "yarn lint:css --fix",
    "format:js": "yarn lint:js --fix"
  },
  "devDependencies": {
    "@babel/cli": "7.28.3",
    "@babel/core": "7.28.4",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-react": "7.27.1",
    "@commitlint/cli": "20.1.0",
    "@newhighsco/chipset": "6.25.1",
    "@newhighsco/commitlint-config": "1.1.46",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "4.2.5",
    "@newhighsco/prettier-config": "2.1.32",
    "@newhighsco/release-config": "1.4.13",
    "@newhighsco/stylelint-config": "4.0.18",
    "@newhighsco/ts-config": "1.0.2",
    "@qiwi/multi-semantic-release": "7.1.2",
    "@storybook/react-webpack5": "9.1.10",
    "chromatic": "13.3.0",
    "concurrently": "9.2.1",
    "eslint": "8.57.1",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "semantic-release": "24.2.9",
    "storybook": "9.1.10",
    "stylelint": "16.24.0",
    "tsup": "8.5.0",
    "typescript": "5.9.3",
    "webpack": "5.101.3"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco/eslint-config"
    ],
    "overrides": [
      {
        "files": [
          "*.ts?(x)"
        ],
        "parserOptions": {
          "project": "./tsconfig.eslint.json"
        },
        "rules": {
          "tsc/config": [
            "error",
            {
              "configFile": "./tsconfig.eslint.json"
            }
          ]
        }
      }
    ]
  },
  "multi-release": {
    "sequentialInit": true
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
