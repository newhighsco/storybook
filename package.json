{
  "name": "@newhighsco/storybook",
  "description": "New High Score Storybook addons and presets",
  "author": "New High Score",
  "license": "ISC",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/newhighsco/storybook.git"
  },
  "homepage": "https://github.com/newhighsco/storybook#readme",
  "bugs": {
    "url": "https://github.com/newhighsco/storybook/issues"
  },
  "type": "module",
  "scripts": {
    "prestart": "yarn build",
    "start": "storybook dev --port 6006 --docs",
    "prepare": "husky",
    "build": "yarn workspaces run build",
    "prebuild:storybook": "yarn build",
    "build:storybook": "storybook build --output-dir build --docs --quiet --webpack-stats-json",
    "pretest": "yarn lint",
    "test": "jest --runInBand",
    "test:list": "jest --listTests",
    "snapshot": "chromatic --storybook-build-dir build --auto-accept-changes main --exit-once-uploaded --only-changed",
    "lint": "concurrently yarn:lint:*",
    "lint:css": "stylelint --cache --ignore-path .gitignore '**/*.?(s)css'",
    "lint:js": "eslint --cache .",
    "format": "concurrently yarn:format:*",
    "format:css": "yarn lint:css --fix",
    "format:js": "yarn lint:js --fix"
  },
  "devDependencies": {
    "@commitlint/cli": "20.3.1",
    "@newhighsco/chipset": "6.27.0",
    "@newhighsco/commitlint-config": "1.1.46",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "6.0.7",
    "@newhighsco/prettier-config": "2.3.2",
    "@newhighsco/release-config": "1.4.20",
    "@newhighsco/stylelint-config": "4.0.20",
    "@newhighsco/ts-config": "1.0.2",
    "@qiwi/multi-semantic-release": "7.1.2",
    "@storybook/react-webpack5": "10.1.11",
    "@swc/core": "1.15.10",
    "@swc/jest": "0.2.39",
    "@types/jest": "30.0.0",
    "chromatic": "13.3.5",
    "concurrently": "9.2.1",
    "eslint": "9.39.2",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "jest-junit": "16.0.0",
    "prettier": "3.8.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "semantic-release": "25.0.2",
    "storybook": "10.1.11",
    "stylelint": "17.0.0",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "webpack": "5.104.1"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "multi-release": {
    "sequentialInit": true
  },
  "prettier": "@newhighsco/prettier-config",
  "release": {
    "extends": "@newhighsco/release-config"
  },
  "stylelint": {
    "extends": [
      "@newhighsco/stylelint-config"
    ]
  }
}
